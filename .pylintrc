

[MASTER]
load-plugins=pylint_odoo
score=n

[ODOOLINT]
readme_template_url="https://github.com/OCA/maintainer-tools/blob/master/template/module/README.rst"
manifest_required_authors=Odoo Community Association (OCA)
manifest_required_keys=license
manifest_deprecated_keys=description,active
license_allowed=AGPL-3,GPL-2,GPL-2 or any later version,GPL-3,GPL-3 or any later version,LGPL-3
valid_odoo_versions=16.0

[MESSAGES CONTROL]
enable=all
# Enable all then relax disable instead of disable all and enable one-by-one
disable=suppressed-message,missing-function-docstring,line-too-long,missing-module-docstring,missing-class-docstring,fixme,c-extension-no-member,too-many-locals,too-many-branches,too-many-instance-attributes,too-many-lines,too-many-star-expressions,too-many-function-args,logging-too-many-args,too-many-format-args,too-many-ancestors,too-many-instance-attributes,too-many-public-methods,too-many-return-statements,too-many-branches,too-many-arguments,too-many-locals,too-many-statements,too-many-boolean-expressions,too-many-nested-blocks,too-few-public-methods,locally-disabled,inconsistent-return-statements


[REPORTS]
msg-template={path}:{line}: [{msg_id}({symbol}), {obj}] {msg}
output-format=colorized
reports=no
